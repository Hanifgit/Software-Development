<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3F51B5"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CheckboxText"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <CheckBox
        android:id="@+id/milkCk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/milkText"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/sugarCk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sugarText"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/waterCk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waterText"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/ShowCk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ButtonText"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/ViewText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        />


</LinearLayout>